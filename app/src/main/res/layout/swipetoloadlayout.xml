<?xml version="1.0" encoding="utf-8"?>
<com.aspsine.swipetoloadlayout.SwipeToLoadLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gamota.youtubeplayer.activity.MainActivity">

    <com.gamota.youtubeplayer.LoadLayout.RefreshHeaderView
        android:id="@id/swipe_refresh_header"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvListVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D2DADD"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <com.gamota.youtubeplayer.LoadLayout.LoadMoreFooterView
        android:id="@id/swipe_load_more_footer"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp" />

</com.aspsine.swipetoloadlayout.SwipeToLoadLayout>